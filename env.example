# LLM API Configuration
# Set USE_ONLINE_LLM=true to use online APIs (recommended for Vercel)
USE_ONLINE_LLM=true

# Choose API provider: huggingface, replicate, or openai
LLM_API_PROVIDER=huggingface

# Hugging Face API (Free tier available)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_hf_api_key_here
HF_MODEL=TinyLlama/TinyLlama-1.1B-Chat-v1.0

# Replicate API (Alternative)
# Get your token from: https://replicate.com/account/api-tokens
# REPLICATE_API_TOKEN=your_replicate_token_here

# OpenAI API (Alternative - requires paid account)
# OPENAI_API_KEY=your_openai_key_here

# Google Gemini API (For improved song search accuracy - optional)
# Get your API key from: https://makersuite.google.com/app/apikey
# This is optional but recommended for better song search results
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Groq API (Recommended for RJ Chat - Fastest Llama Inference)
# Get your free API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
LLAMA_MODEL=llama-3.1-8b-instant

# RJ Rate Limiting (Prevents abuse)
RJ_RATE_LIMIT_MINUTE=20
RJ_RATE_LIMIT_HOUR=200

# YouTube Data API v3 (Required for accurate video search)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" in Google Cloud Console
# You can provide multiple keys for automatic rotation when quota is exceeded
# Option 1: Single key (backward compatible)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Option 2: Multiple keys (recommended - automatic rotation on quota exceeded)
# The service will automatically rotate to the next key when quota limit is reached
YOUTUBE_API_KEY_1=your_first_youtube_api_key_here
YOUTUBE_API_KEY_2=your_second_youtube_api_key_here
YOUTUBE_API_KEY_3=your_third_youtube_api_key_here

# Option 3: Comma-separated list (alternative format)
# YOUTUBE_API_KEYS=key1,key2,key3

# Local Model (Optional - only if not using online APIs)
# USE_LOCAL_LLM=false
# LLAMA_MODEL_PATH=models/tinyllama

# CORS Configuration
ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:8000

# Database Configuration
# LOCAL DEVELOPMENT: Uses SQLite by default (no configuration needed)
# The app automatically detects local vs deployment and uses SQLite locally

# To use PostgreSQL locally (optional):
# USE_SQLITE_LOCAL=false
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=aura_music
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# DEPLOYMENT: PostgreSQL is automatically used from DATABASE_URL
# Most hosting providers (Render, Vercel, Heroku, Railway) set DATABASE_URL automatically
# Option 1: Full connection string (set by hosting provider)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Option 2: Individual components (if DATABASE_URL not available)
# DB_HOST=your-host.com
# DB_PORT=5432
# DB_NAME=aura_music
# DB_USER=your_user
# DB_PASSWORD=your_password

# Note: 
# - Local: SQLite is used by default (data/aura.db)
# - Deployment: PostgreSQL from DATABASE_URL (auto-detected)
# - Set USE_SQLITE_LOCAL=false to force PostgreSQL locally

